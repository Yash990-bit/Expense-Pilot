{
    "version": 2,
    "builds": [
        {
            "src": "frontend/expense-tracker/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "frontend/expense-tracker/dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/v1/auth/(.*)",
            "dest": "/backend/server.js"
        },
        {
            "src": "/api/v1/income/(.*)",
            "dest": "/backend/server.js"
        },
        {
            "src": "/api/v1/expense/(.*)",
            "dest": "/backend/server.js"
        },
        {
            "src": "/api/v1/dashboard/(.*)",
            "dest": "/backend/server.js"
        },
        {
            "src": "/uploads/(.*)",
            "dest": "/backend/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/expense-tracker/dist/$1"
        }
    ],
    "rewrites": [
        {
            "source": "/((?!api).*)",
            "destination": "/frontend/expense-tracker/dist/index.html"
        }
    ]
}